<Feature xmlns="http://www.sila-standard.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" Category="labware" FeatureVersion="1.0" MaturityLevel="Draft" Originator="de.unigreifswald" SiLA2Version="1.0" xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_base/raw/master/schema/FeatureDefinition.xsd">
  <Identifier>LabwareAutomationService</Identifier>
  <DisplayName>Labautomation Labware Service</DisplayName>
  <Description>Simplified query of the LabOP Labware ontology individuals.</Description>
  <Command>
    <Identifier>GetLabwareDimensions</Identifier>
    <DisplayName>GetLabwareDimensions</DisplayName>
    <Description>Get Labware Dimensions.</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Manufacturer</Identifier>
      <DisplayName>Manufacturer name</DisplayName>
      <Description>Name of the labware Manufacturer.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>ProductID</Identifier>
      <DisplayName>Manufacturer's Product ID</DisplayName>
      <Description>Manufacturer's Product number of the labware.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>Unit</Identifier>
      <DisplayName>Unit</DisplayName>
      <Description>Unit of the dimensions, default is millimetre ["mm"].</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>Dimensions</Identifier>
      <DisplayName>Dimensions</DisplayName>
      <Description>Dimensions of the labware as JSON string.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Response>
  </Command>
  <!-- Labware Gripping Hight -->
  <Command>
    <Identifier>GetGrippingHeight</Identifier>
    <DisplayName>Get Gripping Height</DisplayName>
    <Description>Get Gripping Height.</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Manufacturer</Identifier>
      <DisplayName>Manufacturer name</DisplayName>
      <Description>Name of the labware Manufacturer.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>ProductID</Identifier>
      <DisplayName>Manufacturer's Product ID</DisplayName>
      <Description>Manufacturer's Product number of the labware.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>Unit</Identifier>
      <DisplayName>Unit</DisplayName>
      <Description>Unit of the gripping height, default is millimetre ["mm"].</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>Lidded</Identifier>
      <DisplayName>Lidded</DisplayName>
      <Description>True if the labware is lidded, false otherwise.</Description>
      <DataType>
        <Basic>Boolean</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>GrippingHeight</Identifier>
      <DisplayName>Gripping Height</DisplayName>
      <Description>Gripping Height in the selected unit, depending on lidding state.</Description>
      <DataType>
        <Basic>Real</Basic>
      </DataType>
    </Response>
  </Command>
  <!-- Labware Volume -->
  <Command>
    <Identifier>GetLabwareWellVolume</Identifier>
    <DisplayName>Get Labware Well Volume</DisplayName>
    <Description>Get Labware Well Volume.</Description>
    <Observable>No</Observable>
    <Parameter>
      <Identifier>Manufacturer</Identifier>
      <DisplayName>Manufacturer name</DisplayName>
      <Description>Name of the labware Manufacturer.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>ProductID</Identifier>
      <DisplayName>Manufacturer's Product ID</DisplayName>
      <Description>Manufacturer's Product number of the labware.</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Parameter>
      <Identifier>Unit</Identifier>
      <DisplayName>Unit</DisplayName>
      <Description>Unit of the volume, default is microlitre ["Âµl"].</Description>
      <DataType>
        <Basic>String</Basic>
      </DataType>
    </Parameter>
    <Response>
      <Identifier>Volume</Identifier>
      <DisplayName>Volume</DisplayName>
      <Description>Volume of the labware in defined unit.</Description>
      <DataType>
        <Basic>Real</Basic>
      </DataType>
    </Response>
  </Command>
</Feature>
